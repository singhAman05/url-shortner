{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",

        "outDir": "./dist",

        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,

        "types": ["node"]
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
